{
  "name": "biljoenbad",
  "version": "1.0.0",
  "main": "gulpfile.js",
  "author": "Emotion",
  "copyright": "Emotion",
  "license": "UNLICENSED",
  "private": true,
  "paths": {
    "src": {
      "base": "src/",
      "scss": "src/scss/",
      "components": "templates/_components/",
      "fonts": "src/fonts/",
      "sw": "src/serviceworker/",
      "images": {
        "base": "src/images/",
        "bitmap": {
          "base": "src/images/bitmap/"
        },
        "svg": {
          "base": "src/images/svg/",
          "single": "src/images/svg/single/",
          "sprite": "src/images/svg/sprite/"
        }
      },
      "json": "src/json/",
      "js": "src/js/"
    },
    "dist": {
      "base": "./public_html/",
      "assets": "./public_html/assets/",
      "critical": "./public_html/assets/criticalcss/",
      "css": "./public_html/assets/css/",
      "js": "./public_html/assets/js/",
      "fonts": "./public_html/assets/fonts/",
      "favicon": "./public_html/assets/images/favicon/",
      "images": {
        "base": "./public_html/assets/images/",
        "bitmap": {
          "base": "./public_html/assets/images/bitmap/"
        },
        "svg": {
          "base": "./public_html/assets/images/svg/",
          "single": "./public_html/assets/images/svg/single/",
          "sprite": "./public_html/assets/images/svg/sprite/"
        }
      },
      "manifest": "./public_html/assets/manifests/"
    },
    "abs": {
      "js": "/assets/js/"
    },
    "build": {
      "base": "./build/",
      "css": "./build/css/",
      "fonts": "./build/fonts/",
      "js": "./build/js/",
      "html": "./build/html/",
      "img": "./build/img/"
    },
    "favicon": {
      "src": "./src/images/favicon/favicon_src.{svg,png}",
      "dest": "./public_html/assets/images/favicon/",
      "path": "./assets/images/favicon/"
    },
    "craftConfig": "./config/",
    "templates": {
      "base": "./templates/",
      "inlineJs": "./templates/_inline/_js/",
      "inlineSvg": "./templates/_inline/_svg/",
      "criticalCss": "./templates/_inline/_critical/"
    }
  },
  "urls": {
    "live": "https://basic-craft.nl/",
    "local": "basic-craft.loc",
    "critical": "https://basic-craft.nl/"
  },
  "vars": {
    "siteCssName": "styles.min.css",
    "scssName": "style.scss",
    "scssStyleguideName": "styleguide.scss",
    "siteCssStyleguideName": "styleguide.min.css",
    "jsName": "main.js",
    "jsNameLegacy": "main-legacy.js",
    "manifest": {
      "legacy": "manifest-legacy.json",
      "modern": "manifest.json"
    },
    "webapp": {
      "theme_color": "#fff",
      "background_color": "#fff",
      "display": "standalone",
      "orientation": "any",
      "scope": "/",
      "start_url": "/",
      "lang": "nl"
    }
  },
  "globs": {
    "components": [],
    "fonts": [
      "./src/fonts/*.{eot,ttf,woff,woff2,svg}"
    ],
    "favicon": [
      "./src/images/favicon/*.{png,xml,ico,json,svg}"
    ],
    "purgecss": [
      "./templates/**/*.{html,twig}",
      "./public_html/assets/js/**/*.js",
      "./public_html/*.html",
      "./src/js/**/*.js"
    ],
    "purgecssWhitelist": [],
    "critical": [
      {
        "url": "",
        "template": "index"
      },
      {
        "url": "offline",
        "template": "offline"
      },
      {
        "url": "error",
        "template": "error"
      },
      {
        "url": "503",
        "template": "503"
      },
      {
        "url": "404",
        "template": "404"
      }
    ],
    "criticalWhitelist": [],
    "a11y": [
      {
        "url": ""
      }
    ],
    "download": [
      {
        "url": "https://www.google-analytics.com/analytics.js",
        "dest": "./public_html/assets/js/"
      }
    ],
    "copyVendorToDistJs": [
      "./node_modules/picturefill/dist/picturefill.min.js",
      "./node_modules/svgxuse/svgxuse.js",
      "./node_modules/lazysizes/lazysizes.min.js",
      "./src/js/lottie/*.json"
    ],
    "lintJs": [
      "./src/js/**/*.js",
      "!./src/js/{vendor, dev}/*"
    ],
    "inlineJs": [
      "./node_modules/tiny-cookie/dist/tiny-cookie.min.js",
      "./src/js/_inline/**/*.js"
    ],
    "revision": {
      "files": [
        "./public_html/assets/images/**/*.*"
      ],
      "replace": [
        "./public_html/assets/**/*.{css,js}",
        "./public_html/*.{html,json,js}"
      ],
      "replaceTemplates": [
        "./templates/**/*.{html,twig,css,js,svg}"
      ]
    }
  },
  "dependencies": {
    "@fullcalendar/core": "^5.1.0",
    "@fullcalendar/daygrid": "^5.1.0",
    "@fullcalendar/resource-timegrid": "^5.1.0",
    "@typeform/embed": "^0.22.2",
    "autotrack": "^2.4.1",
    "css-loader": "^3.6.0",
    "fullcalendar": "^5.1.0",
    "fullcalendar-scheduler": "^5.1.0",
    "lazysizes": "^2.0.6",
    "loadjs": "^3.3.1",
    "picturefill": "^3.0.2",
    "remove": "^0.1.5",
    "static-website": "git+ssh://git@git.emotion.nl:emotion/bootstrap-components.git",
    "svgxuse": "^1.2.6",
    "swiper": "~5.0.4",
    "tiny-cookie": "^2.1.2",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@lhci/cli": "^0.3.14",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.2",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "breakpoint-sass": "^2.7.1",
    "browser-sync": "^2.26.7",
    "chalk": "^4.0.0",
    "core-js": "^3.6.5",
    "critical": "^2.0.0-20",
    "cssnano": "^4.1.10",
    "dynamic-import-polyfill": "^0.1.1",
    "eslint": "^6.8.0",
    "fancy-log": "^1.3.3",
    "favicons": "^6.0.0",
    "fibers": "^5.0.0",
    "fs-extra": "^9.0.0",
    "git-user-name": "^2.0.0",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-filter": "^6.0.0",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-load-plugins": "^2.0.3",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-rewrite": "^3.0.3",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-svg-sprite": "^1.5.0",
    "gulp-uglify": "^3.0.2",
    "gzip-size": "^5.1.1",
    "idlize": "^0.1.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-optipng": "^7.1.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.1.0",
    "imagemin-zopfli": "^6.0.0",
    "lighthouse": "^5.6.0",
    "log-symbols": "^4.0.0",
    "modularscale-sass": "^3.0.10",
    "node-sass-magic-importer": "^5.3.2",
    "normalize.css": "^8.0.1",
    "pa11y": "5.3.0",
    "pa11y-reporter-html": "^1.0.0",
    "postcss": "^7.0.27",
    "postcss-reporter": "^6.0.1",
    "pretty-bytes": "^5.3.0",
    "puppeteer": "^3.0.2",
    "require-dir": "^1.2.0",
    "rev-hash": "^3.0.0",
    "rev-path": "^2.0.0",
    "rollup": "^2.7.5",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "sass": "^1.26.5",
    "sitemapper": "^3.0.5",
    "slack": "^11.0.2",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.17.1",
    "susy": "^3.0.5",
    "workbox-build": "^5.1.3",
    "workbox-cacheable-response": "^5.1.3",
    "workbox-core": "^5.1.3",
    "workbox-expiration": "^5.1.3",
    "workbox-navigation-preload": "^5.1.3",
    "workbox-precaching": "^5.1.3",
    "workbox-routing": "^5.1.3",
    "workbox-strategies": "^5.1.3",
    "yargs": "^15.3.1"
  },
  "resolutions": {
    "**/puppeteer": "^3.0.2",
    "gifsicle": "4.0.1"
  },
  "scripts": {
    "start": "gulp",
    "build": "gulp build"
  },
  "bugs": {
    "email": "interactie@emotion.nl"
  },
  "browserslist": [
    "> 1%",
    "ie >= 11",
    "last 3 versions"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-else-return": 2,
      "eqeqeq": 2,
      "no-multi-spaces": 2,
      "no-loop-func": 2,
      "no-use-before-define": 2
    }
  },
  "stylelint": {
    "syntax": "scss",
    "rules": {}
  },
  "babel": {
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "debug": true,
          "corejs": {
            "version": 3,
            "proposals": true
          },
          "modules": false,
          "useBuiltIns": "usage"
        }
      ]
    ]
  }
}
