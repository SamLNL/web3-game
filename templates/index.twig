{# {% import "_partials/_macros.twig" as macro %} #}
{# uncomment line above if you need to use macros in your template #}
{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
  <style>
    {{ source ("index_critical.min.css", ignore_missing = true) }}
  </style>
{% endblock %}

{% block content %}
  {% include '_partials/_global/header' with {
    image: entry.headerImage.first(),
    wave: true,
    payoff: true
  } %}
  <div class="bg-teal pt-2 pt-lg-4">
    <div class="container">
      <div class="d-flex flex-column justify-content-center w-100 w-sm-auto flex-sm-grow-0 flex-sm-row mb-4">
        <div class="bg-teal-500 rounded-sm d-flex flex-column align-items-center px-2 px-md-4 py-3 px-lg-5">
          <div class="w-14 d-lg-flex flex-lg-row w-lg-auto">
            <div class="d-flex flex-row align-items-center mb-1 mr-lg-2 mb-lg-0">
              <svg class="mr-2" width="35" height="35">
                <use xlink:href="/assets/images/svg/sprite/sprite.svg#icon-calendar"></use>
              </svg>
              <span class="text-white weight-700">Opent najaar 2020</span>
            </div>
            <div class="d-flex flex-row align-items-center ml-lg-2">
              <svg class="mr-2" width="35" height="35">
                <use xlink:href="/assets/images/svg/sprite/sprite.svg#icon-marker"></use>
              </svg>
              <span class="text-white weight-700">Gruttostraat, Velp</span>
            </div>
          </div>
        </div>
      </div>

      <div class="w-100 d-flex flex-row justify-content-center">
        <p class="text-center text-white mb-0 pb-4 col-lg-10">
          Water is een bron van energie. Beweeg lekker in ons bad, voel je vrij en laad je weer helemaal op. Het geeft
          power aan lichaam en geest. Dus kom leren zwemmen, goed revalideren, fit worden, ontspannen of spieren
          trainen. Binnenkort in het Biljoenbad!
        </p>
      </div>
    </div>
  </div>

  <div class="wave bg-teal-100 pb-4 pb-lg-8">
    {% include '_partials/_index/svg/lower-wave' with {
      class: 'lower-wave'
    } %}
  </div>
  <div class="bg-teal-100 pb-4 pb-lg-8" id="activiteiten">
    {% include '_partials/_index/customers-8' %}
  </div>
  <div class="container mt-5 mt-lg-10" id="sfeerimpressie">
    {% include '_partials/_index/customers-4' %}
  </div>
  <div class="bg-teal-100 pt-5 pb-5 pt-lg-8">
    <div class="container" id="locatie">
      {% include '_partials/_index/cover-1' %}
    </div>
  </div>
  <div class="container pt-5 pb-2 pb-lg-3 pt-lg-8" id="veelgestelde-vragen">
    {% include '_partials/_index/text-13' %}
  </div>
  <div class="pt-2 pt-lg-4 position-relative" id="contact">
    <div class="container d-flex justify-content-center">
      <div class="wave wave-upper">
        {% include '_partials/_index/svg/upper-wave' with {
          class: 'upper-wave'
        } %}
        <div class="h-6 w-100 bg-teal h-lg-auto">
        </div>
      </div>
      <div class="bg-teal-600 col-lg-10 px-3 pt-4 pb-5 rounded position-relative z-30 d-lg-flex flex-lg-row justify-content-lg-center">
        <div class="d-flex flex-column">
          <p class="mb-4 weight-700 text-white text-center large">
            Heb je een andere vraag of wil je meer weten over de mogelijkheden tot samenwerking? Laat het ons weten!
          </p>
          <div class="d-flex flex-column flex-lg-row justify-content-lg-center">
            <div class="d-flex flex-row justify-content-center align-items-lg-center">
              <svg class="mr-2" width="25" height="25">
                <use xlink:href="/assets/images/svg/sprite/sprite.svg#icon-telefoon"></use>
              </svg>
              <p class="mb-lg-0 mr-lg-2">
                <span class="weight-700 text-white mr-1 large">
                  Bel
                </span>
                <a class="text-yellow weight-700 large hover:underline" href="tel:0123123456" target="_blank"
                   rel="external">0123 - 12 34 56</a>
              </p>
            </div>
            <div class="d-flex flex-column align-items-center flex-lg-row justify-content-lg-center">
              <p class="text-white mb-lg-0 mr-lg-2">of</p>
              <a class="btn btn-yellow" href="mailto:info@biljoenbad.nl" title="Stuur een mail">
                Stuur een mail
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block _inline_js %}
{% endblock %}
