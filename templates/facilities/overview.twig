{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
  <style>
    {{ source ("index_critical.min.css", ignore_missing = true) }}
  </style>
{% endblock %}

{% block content %}
  {% include '_partials/_global/header' with {
    title: entry.title,
    image: entry.headerImage.one(),
    intro: entry.intro
  } %}

  {% set facilities = craft.entries.section('facilities').with(['headerImage']).all() %}

  <div id="mainContentSkip">
    {% if facilities | length %}
      <div class="container">
        <h2 class="mb-3">{{ entry.facilitiesOverviewTitle }}</h2>
        <div class="row">
          <div class="d-flex flex-column mb-4 w-100 flex-md-row flex-md-wrap mb-lg-8">
            {% for facility in facilities %}
              <div class="col-12 mb-3 col-md-6 col-lg-4">
                {% include '_partials/_components/cta-blocks/cta-block/cta-block.twig' with {
                  title: facility.title,
                  mainImage: facility.headerImage[0],
                  subContent: facility.summaryText | striptags[:90] ~ '...',
                  cta: { url: facility.url, text: 'Lees meer', target: '' },
                  ctaArrow: true,
                  swiper: false
                } %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
      {% include "_partials/_common/matrix.twig" %}
    {% endif %}
  </div>
{% endblock %}

{% block _inline_js %}
{% endblock %}
