{#
  Image specially for side-by-side
#}

{% import "_partials/_macros.twig" as macro %}

{% set image = image is defined ? image : '' %}

{% if image | length %}
  {% set transforms =
    [
      {
        'media': 'min-width: 1440px',
        'sizes': [
        {width: 720, ratio: 720/600}
      ],
      },
      {
        'media': 'min-width: 1024px',
        'sizes': [
        {width: 600, ratio: 600/500}
      ],
      },
      {
        'media': 'min-width: 768px',
        'sizes': [
        {width: 768, ratio: 768/300}
      ],
      },
      {
        'media': 'min-width: 425px',
        'sizes': [
        {width: 425, ratio: 425/300}
      ],
      },
      {
        'media': 'min-width: 375px',
        'sizes': [
        {width: 375, ratio: 375/350}
      ],
      },
      {
        'sizes': [
        {width: 320, ratio: 320/320}
      ],
      }
    ] %}
  {{ macro.renderPicture(image,transforms, true, image.title, 'c-side-by-side__image') }}
{% endif %}
