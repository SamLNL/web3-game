<div class="d-flex flex-column pb-5 flex-md-row flex-md-wrap justify-content-between justify-content-lg-start">
  {% for item in services %}
    <div class="service d-flex flex-row pt-3 pb-3 mb-md-2">
      <svg class="mr-2 mr-lg-1" width="25" height="23">
        <use xlink:href="/assets/images/svg/sprite/sprite.svg#{{ item.svg }}"></use>
      </svg>
      <p class="mb-0 ml-1 weight-700 text-teal">{{ item.title }}
        {% if item['rent'] is defined and item.rent %}
          <span class="weight-300"> (te huur)</span>
        {% endif %}
