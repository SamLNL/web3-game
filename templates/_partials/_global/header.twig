{% import "_partials/_macros.twig" as macro %}
{% set image = image is defined and image | length ? image : '' %}
{% set wave = wave ?? false %}
{% set payoff = payoff ?? false %}

{% if image | length %}
  <div class="header position-relative">
    {% set transforms =
      [
        {
          'media': 'min-width: 1920px',
          'sizes': [
          {width: 3000, ratio: 3000/700},
        ]
        },
        {
          'media': 'min-width: 1600px',
          'sizes': [
          {width: 1600, ratio: 1920/584},
        ]
        },
        {
          'media': 'min-width: 1200px',
          'sizes': [
          {width: 1600, ratio: 1600/584},
        ]
        },
        {
          'media': 'min-width: 960px',
          'sizes': [
          {width: 1200, ratio: 1200/500},
        ]
        },
        {
          'media': 'min-width: 600px',
          'sizes': [
          {width: 960, ratio: 600/300}
        ],
        },
        {
          'media': 'min-width: 320px',
          'sizes': [
          {width: 600, ratio: 600/300}
        ],
        },
        {
          'sizes': [
          {width: 320, ratio: 320/320},
        ]
        }
      ] %}
    {{ macro.renderPicture(image, transforms, true, image.title) }}
    <div class="payoff">
      {% if payoff %}
        {% include '_inline/_svg/pay-off.svg' %}
      {% endif %}
    </div>
    {% if wave %}
      <div class="wave">
        {% include '_inline/_svg/upper-wave.svg' %}
      </div>
    {% endif %}
  </div>
{% endif %}
