{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
  <style>
    {{ source ("offline_critical.min.css", ignore_missing = true) }}
  </style>
{% endblock %}

{% block content %}

  <section>
    <div>
      <p>
        {{ 'Offline Error'|t }}
      </p>
      <p>
        {{ 'It looks like your device supports offline access!'|t }}
      </p>
      <p>
        {{ 'Much of biljoenbad is designed to work in offline mode—all our top-level pages are cached and available, as well as any pages you’ve previously viewed on this device.'|t }}
      </p>
      <p>
        {{ 'Unfortunately it seems you haven’t visited this page before, so some content may not be available until you connect to a network.'|t }}
      </p>
    </div>
  </section>

{% endblock %}

{% block _inline_js %}
{% endblock %}
